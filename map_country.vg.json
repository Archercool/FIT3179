{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1700,
    "height": 900,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "1"}
        },
        "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "darkgrey"}
      },
      {
        "data": {
          "url": "new-data.csv",
          "format": {"type": "csv"}
        },
        "mark": "circle",
        "encoding": {
          "longitude": {"field": "Longitude", "type": "quantitative"},
          "latitude": {"field": "Latitude", "type": "quantitative"},
          "size": {
            "field": "Temperature",
            "type": "quantitative",
            "title": "Avg Temperature",
            "scale": {"domain": [0, 40]}
          },
          "color": {
            "field": "Temperature",
            "type": "quantitative",
            "title": "Temperature (°C)",
            "scale": {
              "type": "threshold",
              "domain": [10, 20, 30, 40],
              "range": ["#c6e48b", "#7bc96f", "#239a3b", "#196127"]
            }
          },
          "tooltip": [
            {"field": "City", "type": "nominal", "title": "City"},
            {"field": "Temperature", "type": "quantitative", "title": "Avg Temperature (°C)"}
          ]
        }
      },
      {
        "data": {"graticule": true},
        "mark": {
          "type": "geoshape",
          "stroke": "#bcb7b7",
          "strokeWidth": 0.5
        }
      }
    ]
  }
  