{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "projection": {"type": "equalEarth"},
  "title": "Global Temperature on May 16",
  "layer": [
    {
      "data": {
        "url": "map.json",  
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}  
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "GlobalWeatherRepository.csv",  
        "format": {"type": "csv"}
      },
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "temperature_celsius",
          "type": "quantitative",
          "title": "Temperature (°C)",
          "scale": {"domain": [0, 50]}
        },
        "color": {
          "field": "temperature_celsius",
          "type": "quantitative",
          "title": "Temperature (°C)",
          "scale": {
            "domain": [0, 10, 20, 30, 40, 50],
            "range": ["#2c7fb8", "#7fcdbb", "#e0f3db", "#feb24c", "#fc4e2a", "#bd0026"]
          }
        },
        "tooltip": [
          {"field": "location_name", "type": "nominal", "title": "Location"},
          {"field": "temperature_celsius", "type": "quantitative", "title": "Temperature (°C)"},
          {"field": "condition_text", "type": "nominal", "title": "Condition"}
        ]
      }
    }
  ]
}
